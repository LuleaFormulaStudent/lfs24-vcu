{
    "name": "lfs24-vcu",
    "version": "1.2.3",
    "description": "Control software and system for LFS24 Project car",
    "main": "main.ts",
    "type": "commonjs",
    "scripts": {
        "dev": "dotenv -- node --loader ts-node/esm --experimental-specifier-resolution=node main.ts",
        "prod": "node dist/main.js",
        "build": "tsc --project tsconfig.json",
        "build-firmware": "node tools/build_firmware.js",
        "build-pkg": "pkg -c package.json --public-packages \"*\" dist/main.js"
    },
    "author": "Erik Landmark",
    "license": "ISC",
    "dependencies": {
        "@aksel/structjs": "^1.0.0",
        "@influxdata/influxdb-client": "^1.35.0",
        "@msgpack/msgpack": "^3.0.0-beta2",
        "adm-zip": "^0.5.15",
        "dotenv": "^16.4.5",
        "gps": "^0.6.1",
        "i2c-bus": "^5.2.3",
        "mavlink-lib": "git+https://git@gitlab.luleafs.se/lfs2024/mavlink-lib",
        "mavlink-mappings": "^1.0.20-20240131-0",
        "node-localstorage": "^3.0.5",
        "node-mavlink": "^2.0.7",
        "node-mavlink-ftp": "^0.0.1",
        "node-mavlink-heartbeat": "^0.0.1-alpha.1",
        "node-os-utils": "^1.3.7",
        "onoff": "^6.0.3",
        "pkg": "^5.8.1",
        "serialport": "^12.0.0",
        "socketcan": "^4.0.4",
        "typescript": "^5.5.4",
        "ws": "^8.18.0"
    },
    "devDependencies": {
        "@types/i2c-bus": "^5.1.2",
        "@types/node": "^20.16.0",
        "@types/node-os-utils": "^1.3.4",
        "@types/ws": "^8.5.12",
        "@types/adm-zip": "^0.5.5",
        "@types/node-localstorage": "^1.3.3",
        "dotenv-cli": "^7.4.2",
        "ts-node-dev": "^2.0.0"
    },
    "pkg": {
        "targets": [
            "node16-linux-arm64",
            "node16-linux-x64",
            "node16-windows-x64"
        ],
        "outputPath": "dist",
        "compress": "Gzips",
        "options": ["max_old_space_size=4096"],
        "assets": [
            "node_modules\\epoll\\build\\Release\\*",
            "node_modules\\@serialport\\bindings-cpp\\*"
        ]
    }
}
